        <item name="android:statusBarColor">@color/purple_700</item>
    </style>

    <style name="Theme.CryptoApp.Fullscreen" parent="Theme.CryptoApp">
        <item name="android:actionBarStyle">@style/Widget.Theme.CryptoApp.ActionBar.Fullscreen
